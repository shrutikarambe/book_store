doctype html
html
  head
    link(rel='stylesheet' type='text/css' href='../css/bootstrap.min.css')
    link(rel='stylesheet' type='text/css' href='../css/bookstore.css')
    link(rel='stylesheet' type='text/css' href='../css/all.min.css')
    script(src='../js/jquery-3.5.1.min.js')
    script(src='../js/popper.min.js')
    script(src='../js/bootstrap.min.js')
    script(src='../js/book-store.js')
    title= `${title}`
  body
    nav.navbar.fixed-top.navbar-expand-lg.navbar-dark.bg-dark        
        .container
            a.navbar-brand(href='/') Bookstore
            button.navbar-toggler(type='button', data-toggle='collapse', data-target='#navbarText', aria-controls='navbarText', aria-expanded='false', aria-label='Toggle navigation')
                span.navbar-toggler-icon
            #navbarText.collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item
                        a.nav-link(href='#') Cart&nbsp;&nbsp;
                            span#cartSize.badge.badge-light= cartSize
                    if userLoggedIn
                        li.nav-item
                            a.nav-link(href='/logout') Logout
                    else 
                        li.nav-item
                            a.nav-link(href='/login') Login
    .container.contents
        .row
            .col
                block content
    