extends layout

block content
    .text-center
        if loginError
            .alert.alert-danger.alert-dismissible.fade.show.form-signin(role='alert')
                strong Error!
                |  Email or password is incorrect
                button.close(type='button', data-dismiss='alert', aria-label='Close')
                    span(aria-hidden='true') &times;
        form#signin.form-signin(action='/signin', method='POST')
            h1.h3.mb-3.font-weight-normal Please sign in
            label.sr-only(for='inputEmail') Email address
            input#inputEmail.form-control(type='email', placeholder='Email address', required='', autofocus='', style='margin-bottom:10px', name='email')
            label.sr-only(for='inputPassword') Password
            input#inputPassword.form-control(type='password', placeholder='Password', required='', style='margin-bottom:20px', name='password')            
            button.btn.btn-lg.btn-primary.btn-block(type='submit') Sign in
        a.small(href='/reset-password') Reset Password
        p.h3.text-uppercase.text-muted(style='margin-top:30px;') or
        a.btn.btn-lg.btn-dark.btn-block.form-signin(href='/register', style='padding:7px; margin-top:30px;') Register